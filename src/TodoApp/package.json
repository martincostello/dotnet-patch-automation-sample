{
  "name": "todoapp",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "An ASP.NET Core app for managing Todo items",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts && stylelint --fix lax styles/**/*.css",
    "lint": "eslint scripts",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/dotnet-patch-automation-sample.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/ui": "^4.0.16",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^17.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "moment": "^2.30.1",
    "prettier": "^3.8.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "ts-loader": "^9.5.4",
    "tsify": "^5.0.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
